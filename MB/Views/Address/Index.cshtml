@model IEnumerable<MB.Data.Address>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Car List</h2>
        </div>
        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
        {
            <div class="col-6 text-right">
                <a asp-controller="Address" asp-action="Create" class="btn btn-primary">Create new Address</a>
            </div>
        }
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        City
                    </th>
                    <th>
                        Street
                    </th>
                    <th>
                        House
                    </th>
                    <th>
                        Stops
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var address in Model)
                {
                    <tr>
                        <td width="25%">@address.City</td>
                        <td width="25%">@address.Street</td>
                        <td width="25%">@address.House</td>
                        <td width="25%">@address.Stops</td>
                        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
                        {
                            <td width="25%">
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Address" asp-action="Update" asp-route-Id="@address.Id" class="btn btn-primary mx-1">Update</a>
                                    <a asp-controller="Address" asp-action="Delete" asp-route-Id="@address.Id" class="btn btn-danger mx-1">Delete</a>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>А где?</p>
    }
</div>

