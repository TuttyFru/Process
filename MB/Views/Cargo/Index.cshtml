@model IEnumerable<MB.Data.Cargo>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cargo List</h2>
        </div>
        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
        {
            <div class="col-6 text-right">
                <a asp-controller="Cargo" asp-action="Create" class="btn btn-primary">Create new Cargo</a>
            </div>
        }
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Object name
                    </th>
                    <th>
                        Weight
                    </th>
                    <th>
                        Volume
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cargo in Model)
                {
                    <tr>
                        <td width="25%">@cargo.Name</td>
                        <td width="25%">@cargo.Weight</td>
                        <td width="25%">@cargo.Volume</td>
                        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
                        {
                            <td width="25%">
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Cargo" asp-action="Update" asp-route-Id="@cargo.Id" class="btn btn-primary mx-1">Update</a>
                                    <a asp-controller="Cargo" asp-action="Delete" asp-route-Id="@cargo.Id" class="btn btn-danger mx-1">Delete</a>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Какой груз?</p>
    }

</div>

