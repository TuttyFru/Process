@model MB.ViewModels.ShippingVM

<form method="post" asp-action="Update">
    <input asp-for="Shipping.Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Shipping</h2>
        </div>
        <div class="row">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Shipping.Cost"></label>
                    <input asp-for="Shipping.Cost" class="form-control" />
                    <span asp-validation-for="Shipping.Cost" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Shipping.Route"></label>
                    <select asp-for="Shipping.Route_id" asp-items="@Model.TDDRoute" class="form-control">
                        <option selected>--Select Shipping Type--</option>
                    </select>
                    <span asp-validation-for="Shipping.Route_id" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Shipping.Driver"></label>
                    <select asp-for="Shipping.Driver_id" asp-items="@Model.TDDDriver" class="form-control">
                        <option selected>--Select Shipping Type--</option>
                    </select>
                    <span asp-validation-for="Shipping.Driver_id" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-75" value="Update" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                </div>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}